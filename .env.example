# Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# OpenAI Configuration (REQUIRED)
# ============================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# ============================================
# Database Configuration
# ============================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
# Default for Docker: postgresql://postgres:postgres@postgres:5432/postgres
# Default for local: postgresql://postgres:postgres@localhost:5432/postgres
POSTGRES_CONNECTION_STRING=postgresql://postgres:postgres@postgres:5432/postgres

# ============================================
# Backend API Configuration
# ============================================
# Port for FastAPI backend (default: 8000)
BACKEND_PORT=8000

# ============================================
# Frontend Configuration
# ============================================
# Port for Next.js frontend (default: 3000)
FRONTEND_PORT=3000

# Backend API URL for frontend
# For Docker: http://backend:8000
# For local development: http://localhost:8000
NEXT_PUBLIC_API_URL=http://localhost:8000

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=postgres
POSTGRES_PORT=5432
